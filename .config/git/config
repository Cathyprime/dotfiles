[alias]
	ai = "add --interactive"
	aliases = "!git config --get-regexp ^alias | sed 's/alias.//' | sed 's/ /@/' | column -t -s '@'"
	ca = "commit -v -a"
	c = "commit -v"
	co = "checkout"
	lg = "!f() { git log --graph --decorate -n ${1:-10}; }; f"
	ls = "branch"
	lsd = "branch -d"
	nuke = !git reset --hard && git clean -fd
	orphan = "!f() { git checkout --orphan $1; git reset --hard && git clean -fd; }; f"
	please = "push --force-with-lease"
	pr = "pull --rebase"
	ra = "rebase --abort"
	rc = "rebase --continue"
	ri = "rebase -i"
	r = "rebase"
	sw = switch
	tree = "log --graph --decorate --oneline --all"

