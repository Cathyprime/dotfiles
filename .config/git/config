[core]
	pager = "delta"
	editor = "nvim"

[delta]
	light = false
	line-numbers = true
	navigate = true

[interactive]
	diffFilter = "delta --color-only"

[pull]
	rebase = false

[user]
	email = "jaroszynskijulian@gmail.com"
