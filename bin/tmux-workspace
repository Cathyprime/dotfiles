#!/usr/bin/env bash

# add paths where to search for projects here
paths=(
	~/Repositories
	~/Repositories/neovim-plugins
	~/Repositories/dotfiles/.config
	~/Repositories/school/
)

# here are some folders by itself
additional_choices=$(
	cat <<EOC
$HOME/.config/nvim
$HOME/Repositories/dotfiles/.config
$HOME/Downloads
EOC
)

if [[ $# -eq 1 ]]; then
	selected=$1
else
	selected=$(fd . --exclude=misc --exclude=qmk_firmware --exact-depth=1 -t d -H ${paths[*]} | cat - <(echo -e "$additional_choices") | fzf)
	echo $selected
fi

if [[ -z $selected ]]; then
	exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	tmux new-session -s $selected_name -c $selected
	exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
	tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name
